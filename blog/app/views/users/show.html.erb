<div class="container-fluid">
  
  <h1 class="text-center"><%= @user.name %></h1>
  
  <p class="text-center"><strong>Profile Picture:</strong></p>
    <% if @user.profilepic.attached? %>
      <image class="center" src="<%=(url_for(@user.profilepic))%>">
    <% end %>
  
  <p class="text-center">
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  
  <p class="text-center"><%= link_to 'Edit', edit_user_path(@user) %></p>
  
  <div class="card-columns justify-content-center d-flex flex-column mx-auto" style="max-width: 500px">
    <% @user.articles.each do |article| %>
      <div class="card">
        <div class="card-header row no-gutters">
          <div class="col-md-10"><%= link_to article.title, article %></div>
          <div class="col text-right"><%= article.likes %> likes</div>
        </div>
        <div class="card-body"><%= article.text %></div>
      </div>
    <% end %>
  </div>
  
  
  <%= link_to 'Back', users_path %>
</div>
