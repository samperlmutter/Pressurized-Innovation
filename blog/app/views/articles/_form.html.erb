<p>
<%= image_tag "logo.png", size: "256x160" %>
</p>

<%= form_for @article do |f| %>
 
<% if @article.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-row col-auto form-group">
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </p>
</div>

<div class="form-row col-auto form-group">
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control" %>
  </p>
</div>

<div class="row col-sm form-group">
 <div class="custom-file">
   <%= f.label "Profile Photo", class: "custom-file-label" %>
   <%= f.file_field :avatar, class: "form-control custom-file-input" %><br>
 </div>
</div>

<p>
  <% if @article.avatar.attached? %>
      <image src="<%=(url_for(@article.avatar))%>"
  <% end %>
</p>

<div class="form-row col-auto form-group">
  <%= f.submit :Submit, class: 'btn btn-success' %>
</div>

<% end %>
