<p>
<%= image_tag "logo.png", size: "256x160" %>
</p>

<p>
    <strong>Title: </strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<p>
    <strong>Likes:</strong>
    <%= @article.likes %>
</p>

<!--NICK ADDED THIS-->
<p>
    <strong>Image:</strong>
</p>
<p>
<% if @article.avatar.attached? %>
    <image src="<%=(url_for(@article.avatar))%>" style="width:100%;max-width:400px"></image>
<% end %>
</p>


<h2>Comments</h2>
<% @article.comments.each do |comment| %>
    <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>
    
    <p>
        <strong>Comment:</strong>
        <%= comment.body %>
    </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Like article', like_article_url %>

<br/>

<%= link_to 'Article List', articles_path %>