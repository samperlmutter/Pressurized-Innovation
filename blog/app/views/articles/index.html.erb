<div class="container-fluid text-center">
  <h1>Articles</h1>
  <div class="img">
    <p>
    <%= image_tag "logo.png", size: "256x160" %>
    </p>
  </div>
  
  <div class="card-columns justify-content-center d-flex flex-column mx-auto" style="max-width: 500px">
    <%= link_to 'New article', new_article_path, class: "btn btn-success float-right" %>
    <% @articles.each do |article| %>
      <div class="card">
        <div class="card-header">
            <div class="float-left"><%= link_to article.title, article %></div>
            <div class="float-right"><%= article.likes.count %> likes</div>
            <div class="clearfix"></div>
        </div>
        <div class="card-body">
          <%= article.text %>
        </div>
        <div class="card-footer text-muted">
          <div class="float-left">By <%= link_to article.user.name, user_path(article.user) %></div>
          <div class="float-right">
            <%= link_to raw('<i class="material-icons">create</i>'), edit_article_path(article) %>
            <%= link_to raw('<i class="material-icons text-danger">delete</i>'),
                                article_path(article),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>